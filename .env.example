# Environment Variables Template
# Copy this file to .env and fill in the values

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
FIREBASE_PROJECT_ID=your-firebase-project-id

# Cloud Tasks Configuration
# Format: projects/PROJECT_ID/locations/LOCATION/queues/QUEUE_NAME
TASK_QUEUE_PATH=projects/your-gcp-project-id/locations/europe-west2/queues/default

# Environment
ENVIRONMENT=dev

# Server Configuration
PORT=8080

# Vertex AI Configuration (must be europe-west2 for UK/EU compliance)
VERTEX_AI_LOCATION=europe-west2

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Service Account Configuration
# Email of the service account used by Cloud Tasks for OIDC authentication
SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service URL (for Cloud Tasks callbacks)
# Development: http://localhost:8080
# Production: https://your-service-url.run.app
SERVICE_URL=http://localhost:8080
